---
interface Props {
	quote: string;
	author: string;
	company: string;
	role: string;
}

const { quote, author, company, role } = Astro.props;
---

<div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border border-slate-100 hover:border-turquoise/30">
	<div class="flex items-start gap-2 mb-4">
		<svg class="w-8 h-8 text-turquoise flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
			<path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
		</svg>
	</div>
	<p class="text-gray-custom leading-relaxed mb-6 italic">"{quote}"</p>
	<div class="border-t border-slate-200 pt-4">
		<p class="font-semibold text-dark">{author}</p>
		<p class="text-sm text-turquoise">{role}</p>
		<p class="text-sm text-gray-custom">{company}</p>
	</div>
</div>
