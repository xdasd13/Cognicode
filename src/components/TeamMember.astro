---
interface Props {
	initials: string;
	name: string;
	role: string;
	bio: string;
}

const { initials, name, role, bio } = Astro.props;
---

<div class="team-member">
	<div class="member-avatar">{initials}</div>
	<h3>{name}</h3>
	<p class="member-role">{role}</p>
	<p class="member-bio">{bio}</p>
</div>

<style>
	.team-member {
		text-align: center;
		padding: 2rem;
		background: var(--light-gray);
		border-radius: 12px;
		transition: all 0.3s ease;
	}

	.team-member:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(6, 182, 212, 0.1);
	}

	.member-avatar {
		width: 80px;
		height: 80px;
		margin: 0 auto 1rem;
		background: var(--turquoise);
		color: white;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.8rem;
		font-weight: 700;
		letter-spacing: 1px;
	}

	.team-member h3 {
		font-size: 1.3rem;
		color: var(--dark);
		margin-bottom: 0.5rem;
	}

	.member-role {
		color: var(--turquoise);
		font-weight: 600;
		margin-bottom: 1rem;
	}

	.member-bio {
		color: var(--gray);
		font-size: 0.95rem;
		line-height: 1.6;
	}
</style>
