---
interface Props {
	initials: string;
	name: string;
	role: string;
	bio: string;
}

const { initials, name, role, bio } = Astro.props;
---

<div class="text-center p-8 bg-light-gray rounded-xl transition-all duration-300 hover:-translate-y-1 hover:shadow-[0_10px_30px_rgba(6,182,212,0.1)]">
	<div class="w-20 h-20 mx-auto mb-4 bg-turquoise text-white rounded-full flex items-center justify-center text-3xl font-bold tracking-wide">
		{initials}
	</div>
	<h3 class="text-xl text-dark mb-2">{name}</h3>
	<p class="text-turquoise font-semibold mb-4">{role}</p>
	<p class="text-gray-custom text-sm leading-relaxed">{bio}</p>
</div>
