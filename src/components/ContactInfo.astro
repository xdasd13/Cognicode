---
import { Icon } from 'astro-icon/components';

interface Props {
	icon: string;
	title: string;
	value: string;
}

const { icon, title, value } = Astro.props;
---

<div class="info-item">
	<div class="info-icon">
		<Icon name={icon} />
	</div>
	<div>
		<h4>{title}</h4>
		<p>{value}</p>
	</div>
</div>

<style>
	.info-item {
		display: flex;
		gap: 1.5rem;
		align-items: flex-start;
	}

	.info-icon {
		width: 56px;
		height: 56px;
		color: var(--turquoise);
		flex-shrink: 0;
	}

	.info-icon :global(svg) {
		width: 100%;
		height: 100%;
	}

	.info-item h4 {
		color: var(--dark);
		margin-bottom: 0.5rem;
		font-size: 1.1rem;
	}

	.info-item p {
		color: var(--gray);
	}
</style>
